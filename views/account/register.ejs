<% layout('layout') %>
<div class="register_container">
	
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<form action="/register" method="POST">
				<legend>Register</legend>
				<div>
					<label for="">Name: </label>
					<input class="form-control" type="text" name="name" placeholder="name">
					<% if(errors.length > 0 && errors.find(error => error.param === 'name')){ %>
                        <p class="text-danger"><%= errors.find(error => error.param === 'name').msg %></p>
					<% } %>
				</div>
				<div>
					<label for="">Username: </label>
					<input class="form-control" type="text" name="username" placeholder="username">
					<% if(errors.length > 0 && errors.find(error => error.param === 'username')){ %>
                        <p class="text-danger"><%= errors.find(error => error.param === 'username').msg %></p>
					<% } %>
				</div>
				<div>
					<label for="">Email: </label>
					<input class="form-control"  type="email" name="email" placeholder="email">
					<% if(errors.length > 0 && errors.find(error => error.param === 'email')){ %>
                        <p class="text-danger"><%= errors.find(error => error.param === 'email').msg %></p>
					<% } %>
				</div>
				<div>
					<label for="">Password: </label>
					<input  class="form-control"  type="password" name="password" placeholder="password">
					<% if(errors.length > 0 && errors.find(error => error.param === 'password')){ %>
                        <p class="text-danger"><%= errors.find(error => error.param === 'password').msg %></p>
					<% } %>
				</div>
				<div>
					<label for="">Confirm Password: </label>
					<input class="form-control"  type="password" name="confirm_password" placeholder="confirm password">
					<% if(errors.length > 0 && errors.find(error => error.param === 'confirm_password')){ %>
                        <p class="text-danger"><%= errors.find(error => error.param === 'confirm_password').msg %></p>
					<% } %>
				</div>
				<button class="btn btn-primary">Register</button>
			</form>
			<br>
			<br>
			<br>
		</div>
	</div>
</div>

